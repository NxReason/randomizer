<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Randomizer</title>

    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="css/randomizer.css" />
  </head>
  <body>
    <div id="app">
      <%- include('_partials/header') %>
      <section class="options" data-set-id="<%= set?.id %>">
        <div class="options-header">
          <!-- DEFAULT CONTENT -->
          <h3 class="options-title" id="options-title">
            <% if (set) { %> <%= set.name %> <% } else { %> Options <% } %>
          </h3>
          <i class="icon icon-save" id="save-btn"></i>
          <!-- SAVE SET FORM -->
          <form id="save-set-form" class="save-set-form">
            <input type="text" id="new-set-name" value="<%= set?.name %>" />
            <button>Save</button>
          </form>
        </div>
        <ul class="options-list" id="options-list">
          <% if (set) { %> <% set.options.forEach(opt => { %>
          <li class="options-list-item">
            <%= opt.name %> <span class="remove-option-icon">x</span>
          </li>
          <% }); %> <% } %>
        </ul>
        <form class="options-menu" id="options-menu">
          <input
            type="text"
            placeholder="New option"
            class="options-name-input"
            id="options-name-input"
          />
          <button>Add</button>
        </form>
      </section>

      <section class="picker">
        <button class="picker-run-btn" id="picker-run-btn">Go</button>
        <p class="picker-result" id="picker-result"></p>
      </section>

      <section class="history">
        <h3 class="history-header">History</h3>
        <ul class="history-list" id="history-list"></ul>
      </section>
    </div>

    <script src="js/api.js"></script>
    <script src="js/app.js"></script>
  </body>
</html>
